@startuml
!include style.puml
skinparam arrowThickness 1.1
skinparam arrowColor UI_COLOR_T4
skinparam classBackgroundColor UI_COLOR

package UI <<Rectangle>>{
Class "<<interface>>\nUi" as Ui
Class "{abstract}\nUiPart" as UiPart
Class UiManager
Class MainWindow
Class HelpWindow
Class StatusBarFooter
Class DisplaySection
Class FooterButtonSection
Class AllContactsSection
Class PersonList
Class AnyListSection
}

package Model <<Rectangle>> {
Class HiddenModel #FFFFFF
}

package Logic <<Rectangle>> {
Class HiddenLogic #FFFFFF
}

Class HiddenOutside #FFFFFF
HiddenOutside ..> Ui

UiManager .left.|> Ui
UiManager -down-> "1" MainWindow
MainWindow *-down-> "1" StatusBarFooter
MainWindow -down-> "1" HelpWindow
MainWindow *-down-> "1" FooterButtonSection
MainWindow *-down-> "1" DisplaySection

HelpWindow -right[hidden]-> StatusBarFooter
StatusBarFooter -right[hidden]-> FooterButtonSection
FooterButtonSection -right[hidden]-> DisplaySection

DisplaySection *-down-> "1" AllContactsSection
AllContactsSection *-down> "1" PersonList

DisplaySection *--> "1" AnyListSection
AnyListSection *---> "1" PersonList

AllContactsSection -right[hidden]-> AnyListSection

MainWindow -left|> UiPart


StatusBarFooter ----|> UiPart
HelpWindow ----|> UiPart
FooterButtonSection ----|> UiPart
DisplaySection ----|> UiPart
AnyListSection -|> UiPart


AllContactsSection ----|> UiPart
PersonList ---|> UiPart

PersonList .right.> Model
UiManager -right> Logic
MainWindow -right> Logic

MainWindow -[hidden]-|> UiPart
@enduml
